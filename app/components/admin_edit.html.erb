<% content_for :title do %><%= @page_title %><% end %>

<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-semibold">Edit <%= @model_name %></h1>
    <p class="text-base-content/60 mt-1"><%= @title %></p>
  </div>
  <% if @id.present? %>
    <div class="text-sm text-base-content/50">ID: <%= @id %></div>
  <% end %>
</div>

<%= render 'form' %>
