<div class="paginator">
  <div class="paginator__context">
    <% if properties[:show_breadcrumb] %>
      <%= render_component "breadcrumb", trail: [['Events', events_path]] do %>
        <div class="breadcrumb__filters">
          <%= form_tag('', method: :get, class: 'js-breadcrumb-sort breadcrumb__sort', enforce_utf8: false) do %>
            <div class="breadcrumb__toggle"><a href="#">Filter and sort</a> <span class="icon icon--arrow-down">â†“</span></div>
            <div class="breadcrumb__group breadcrumb__group--hidden">
              <%= radio_button_tag(:sort, "time", sort == 'time') %>
              <%= label_tag(:sort_time, "Sort by date") %>
              <%= radio_button_tag(:sort, "summary", sort == 'summary') %>
              <%= label_tag(:sort_summary, "Sort by name") %>
            </div>
            <div class="breadcrumb__group breadcrumb__group--hidden">
              <%= radio_button_tag(:period, "day", period == 1.day) %>
              <%= label_tag(:period_day, "Daily view") %>
              <%= radio_button_tag(:period, "week", period == 1.week) %>
              <%= label_tag(:period_week, "Weekly view") %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <ol class="paginator__buttons paginator__buttons--day">
    <% paginator.each do |page| %>
      <li>
        <%= link_to page[:text], page[:link], class: page[:css] %>
      </li>
    <% end %>
  </ol>

  <hr>

  <h2><%= title %></h2>
</div>
