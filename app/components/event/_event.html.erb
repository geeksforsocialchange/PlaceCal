<div class="event <%= page? ? 'event--full' : 'event--list' %>">
  <article>
    <% if page? %>
      <%= render_component "hero", title: summary, subtitle: @site.tagline %>
        <div class="c">
    <% else %>
      <div class="event__header">
        <h3 itemprop="name"><%= link_to summary, event_path(id) %></h3>
        <% if neighbourhood_name(badge_zoom_level) && show_neighbourhoods %>
          <div class="neighbourhood <%= primary_neighbourhood? ? 'neighbourhood--primary' : 'neighbourhood--secondary' %> event__neighbourhood">
            <span><%= neighbourhood_name(badge_zoom_level) %></span>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="event__details">
      <div class="event__detail event__time">
        <span class="icon-font--time"></span>
        <%= time %>
      </div>
      <% if duration %>
        <div class="event__detail event__duration">
          <span class="icon-font--duration"></span>
          <%= duration %>
        </div>
      <% end %>
      <div class="event__detail event__date">
        <span class="icon-font--date"></span>
        <%= date %>
      </div>
      <% if online? %>
        <div class="event__detail event__repeats">
          <span class="icon-font--online"></span>
          Online
        </div>
      <% elsif place || first_address_line %>
        <div class="event__detail event__location">
          <span class="icon-font--place"></span>
          <% if place %>
            <%= link_to place, partner_path(place) %>
          <% elsif first_address_line %>
            <%= first_address_line %>
          <% end %>
        </div>
      <% end %>
      <% if repeats %>
        <div class="event__detail event__repeats">
          <span class="icon-font--repeats"></span>
          <%= repeats %>
        </div>
      <% end %>
    </div>
    <% if page? %>
      </div> <!-- </div class="c"> -->
    <% end %>
  </article>
</div>
