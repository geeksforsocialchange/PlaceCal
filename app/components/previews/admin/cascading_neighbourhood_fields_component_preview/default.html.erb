<div class="card bg-base-100 border border-base-300 max-w-lg">
  <div class="card-body p-4">
    <div class="flex items-center justify-between mb-4">
      <h4 class="font-semibold">New Service Area</h4>
      <button type="button" class="btn btn-ghost btn-sm btn-circle text-error">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <div class="space-y-3">
      <div class="flex items-center gap-3">
        <label class="w-20 text-sm font-medium text-right">Country</label>
        <select class="select select-bordered select-sm flex-1">
          <option>Select country...</option>
          <option selected>England</option>
          <option>Scotland</option>
          <option>Wales</option>
        </select>
      </div>

      <div class="flex items-center gap-3">
        <label class="w-20 text-sm font-medium text-right">Region</label>
        <select class="select select-bordered select-sm flex-1">
          <option>Select region...</option>
          <option selected>North West</option>
          <option>South East</option>
        </select>
      </div>

      <div class="flex items-center gap-3">
        <label class="w-20 text-sm font-medium text-right">County</label>
        <select class="select select-bordered select-sm flex-1" disabled>
          <option>Select county...</option>
        </select>
      </div>

      <div class="flex items-center gap-3">
        <label class="w-20 text-sm font-medium text-right">District</label>
        <select class="select select-bordered select-sm flex-1">
          <option>Select district...</option>
          <option selected>Manchester</option>
        </select>
      </div>

      <div class="flex items-center gap-3">
        <label class="w-20 text-sm font-medium text-right">Ward</label>
        <select class="select select-bordered select-sm flex-1">
          <option>Select ward...</option>
          <option>Hulme</option>
          <option>Moss Side</option>
          <option>Rusholme</option>
        </select>
      </div>
    </div>
  </div>
</div>
