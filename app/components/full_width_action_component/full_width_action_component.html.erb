<section class="full_width_action <%= @color_class[@color] %>">
  <h3 class="full_width_action__title">
    <%= @title %>
  </h3>
  <p class="full_width_action__content">
    <%= content %>
  </p>

  <div class="full_width_action__btn">
    <% if @color == "cream" %>
      <%= render(LinkBtnLrgGreenComponent.new( link_url: @link_url)) do %>
        <%= @link_text %>
      <% end %>
    <% else %>
      <%= render(LinkBtnLrgLightComponent.new( link_url: @link_url)) do %>
        <%= @link_text %>
      <% end %>
    <% end %>
  </div>

</section>
