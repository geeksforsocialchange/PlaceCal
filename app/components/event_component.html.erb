<div class="event <%= page? ? 'event--full' : 'event--list' %>">
  <article>
    <% if page? %>
    <%= render(HeroComponent.new(summary, site_tagline)) %>
        <div class="c">
    <% else %>
      <div class="event__header">
        <h3 itemprop="name"><%= link_to summary, event_path(id) %></h3>
        <% if neighbourhood_name && show_neighbourhoods %>
          <div class="neighbourhood <%= primary_neighbourhood? ? 'neighbourhood--primary' : 'neighbourhood--secondary' %> event__neighbourhood">
            <span><%= neighbourhood_name %></span>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="event__details">
      <div class="event__detail event__time">
        <span class="icon-font icon-time"></span>
        <%= time %>
      </div>
      <% if duration %>
        <div class="event__detail event__duration">
          <span class="icon-font icon-duration"></span>
          <%= duration %>
        </div>
      <% end %>
      <div class="event__detail event__date">
        <span class="icon-font icon-date"></span>
        <%= date %>
      </div>
      <% if online? %>
        <div class="event__detail event__repeats">
          <span class="icon-font icon-online"> </span>
          Online
        </div>
      <% end %>
      <% if partner_at_location || first_address_line %>
        <div class="event__detail event__location">
          <span class="icon-font icon-place"></span>
          <% if partner_at_location %>
            <%= link_to partner_at_location, partner_path(partner_at_location) %>
          <% elsif first_address_line %>
            <%= first_address_line %>
          <% end %>
        </div>
      <% end %>
      <% if repeats %>
        <div class="event__detail event__repeats">
          <span class="icon-font icon-repeats"></span>
          <%= repeats %>
        </div>
      <% end %>
    </div>
    <% if page? %>
      </div> <!-- </div class="c"> -->
    <% end %>
  </article>
</div>
