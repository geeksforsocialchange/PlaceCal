<% content_for :title, 'Partners' %>
<% content_for :image, @site.og_image %>
<% content_for :description, @site.og_description %>

<%= render(HeroComponent.new("Our Partners", @site.tagline)) %>
<%= turbo_frame_tag "partner_previews" do %>
<div class="c c--lg-space-after">
  <%= render(new BreadcrumbComponent(trail: [['Partners', partners_path]], site_name: @site.name)) do %>
    <%= render PartnerFilterComponent.new(partners: @partners, 
                                          site: @site,
                                          selected_category: @selected_category, 
                                          selected_neighbourhood: @selected_neighbourhood) %>
  <% end %>

  <hr>

  
    <ul class="partners reset two-col" id="partners">
      <% @partners.each do |partner| %>
        <%= render PartnerPreviewComponent.new(partner: partner, site: @site) %>
      <% end %>
    </ul>
 
</div>
 <% end %>
<div id="map">
  <%= render 'shared/map', points: @map, site: @current_site.slug %>
</div>
