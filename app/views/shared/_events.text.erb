<% if @events.any? %>
  <% @events.each do |day, events| %>
<% padding = "#" * (day.strftime('%A %e %B').length + 4) %>
<%= padding %>
<%= "# " + day.strftime('%A %e %B') + " #" %>
<%= padding %>
  <% events.each do |event| %>
<%= %(
#{event.summary}
#{"-" * event.summary.length}
#{event.date.to_s.strip}, #{event.time}

#{sanitize(event.description, tags: [])}
) %>
<%= event.place.to_s + ', ' if event.place %><%= event.location %>
<%= %(
https://placecal.org#{event_path(event)}
) %>
    <% end %>
  <% end %>
<% else %>
  No events with this selection.
<% end %>
