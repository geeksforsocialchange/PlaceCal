<%= simple_form_for [:admin, @article] do |f| %>
  <%= render_component "error", object: @article %>

  <%= f.input :title, id: :article_title, input_html: { class: 'special' } %>
  <%= f.input :body %>
  <%= f.input :is_draft %>

  <%= f.button :submit, class: "btn btn-primary" %>

  <% unless @article.new_record? %>
    <%= link_to "Destroy Article", admin_article_path(@article), method: :delete, class: "btn btn-danger" %>
  <% end %>
<% end %>
