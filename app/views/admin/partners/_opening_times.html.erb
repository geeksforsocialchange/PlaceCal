<%# We only use the active record helpers on the part of the form that will be submitted %>
<%# Everything else is written in HTML so that the syntax matches the stimulus docs %>

<div data-controller="opening-times" data-opening-times-data-value='<%= @partner.opening_times_data %>'>
  <ul class="space-y-2" data-opening-times-target="list">
  </ul>

  <div class="mt-4 flex flex-wrap items-center gap-4">
    <label class="flex items-center gap-2 text-sm font-medium text-gray-700" for="day">Day
      <select class="rounded-md border-gray-300 shadow-sm focus:border-placecal-orange focus:ring-placecal-orange sm:text-sm" id="day" data-opening-times-target="day">
        <option value="Monday">Monday</option>
        <option value="Tuesday">Tuesday</option>
        <option value="Wednesday">Wednesday</option>
        <option value="Thursday">Thursday</option>
        <option value="Friday">Friday</option>
        <option value="Saturday">Saturday</option>
        <option value="Sunday">Sunday</option>
      </select>
    </label>
    <label class="flex items-center gap-2 text-sm font-medium text-gray-700" for="open">Opening Time
      <input class="rounded-md border-gray-300 shadow-sm focus:border-placecal-orange focus:ring-placecal-orange sm:text-sm" id="open" type="time" name="" value="00:00" data-opening-times-target="open">
    </label>
    <label class="flex items-center gap-2 text-sm font-medium text-gray-700" for="close">Closing Time
      <input class="rounded-md border-gray-300 shadow-sm focus:border-placecal-orange focus:ring-placecal-orange sm:text-sm" id="close" type="time" name="" value="00:00" data-opening-times-target="close">
    </label>
    <label class="flex items-center gap-2 text-sm font-medium text-gray-700" for="allDay">All Day
      <input class="h-4 w-4 rounded border-gray-300 text-placecal-orange focus:ring-placecal-orange" id="allDay" type="checkbox" name="" value="" data-opening-times-target="allDay" data-action="change->opening-times#allDay">
    </label>
    <button data-action="click->opening-times#addOpeningTime" type="button" class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-md text-white bg-placecal-orange hover:bg-orange-600 transition-colors">Add</button>
  </div>

  <%= f.text_area :opening_times, data: { opening_times_target: "textarea" }, hidden: true %>
</div>
