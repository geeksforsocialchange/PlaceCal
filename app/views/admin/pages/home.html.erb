<% content_for :title do %>Dashboard<% end %>

<% if user_has_no_rights?(current_user) -%>
  <div role="alert" class="alert alert-error mb-6">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <div>
      <h3 class="font-bold">Missing Permissions</h3>
      <p>You have no admin rights. This probably means someone didn't set up your account correctly - please ask whoever invited you!</p>
    </div>
  </div>
<% end -%>

<%# Welcome Header with Quick Actions %>
<div class="flex flex-wrap items-end justify-between gap-4 mb-6">
  <div>
    <h1 class="text-2xl font-bold text-base-content">
      <% hour = Time.current.hour %>
      <% if hour < 12 %>Good morning<% elsif hour < 17 %>Good afternoon<% else %>Good evening<% end %><% if @user.first_name.present? %>, <%= @user.first_name %><% end %>
    </h1>
    <p class="text-base-content/60 mt-1">Here's what's happening with your community calendar.</p>
  </div>
  <div class="flex flex-wrap gap-2">
    <% [Partner, Calendar, User].each do |model| %>
      <% if policy(model).create? %>
        <%= link_to url_for(controller: model.table_name, action: :new),
                    data: { turbo: false },
                    class: "btn btn-sm bg-placecal-orange hover:bg-orange-600 text-white border-placecal-orange gap-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          New <%= model.name.titleize %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<%# Stats Row - Compact horizontal cards %>
<div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-6">
  <%# Partners %>
  <div class="card bg-base-100 border border-base-300 shadow-sm">
    <div class="card-body p-3">
      <div class="flex items-center justify-between">
        <span class="text-xs text-base-content/60">Partners</span>
        <svg class="size-4 text-base-content/30" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
      </div>
      <div class="text-2xl font-bold text-base-content"><%= @total_partners %></div>
    </div>
  </div>

  <%# Calendars - Consolidated with tooltips %>
  <div class="card bg-base-100 border border-base-300 shadow-sm">
    <div class="card-body p-3">
      <div class="flex items-center justify-between mb-1">
        <span class="text-xs text-base-content/60">Calendars</span>
        <span class="text-xs text-base-content/40"><%= @total_calendars %> total</span>
      </div>
      <div class="flex items-baseline gap-3">
        <div class="tooltip tooltip-bottom" data-tip="Calendars successfully importing events">
          <span class="text-lg font-bold text-success"><%= @working_calendars_count %></span>
          <span class="text-[10px] text-base-content/50 ml-0.5">working</span>
        </div>
        <div class="tooltip tooltip-bottom" data-tip="Calendars currently being processed">
          <span class="text-lg font-bold text-info"><%= @processing_calendars_count %></span>
          <span class="text-[10px] text-base-content/50 ml-0.5">queue</span>
        </div>
        <div class="tooltip tooltip-bottom" data-tip="<%= @errored_calendars_count %> import errors, <%= @bad_source_calendars_count %> bad source URLs">
          <span class="text-lg font-bold <%= @problem_calendars_count > 0 ? 'text-error' : 'text-base-content/30' %>"><%= @problem_calendars_count %></span>
          <span class="text-[10px] text-base-content/50 ml-0.5">errors</span>
        </div>
      </div>
    </div>
  </div>

  <%# Events this week %>
  <div class="card bg-gradient-to-br from-placecal-orange/10 to-placecal-orange/5 border border-placecal-orange/20 shadow-sm">
    <div class="card-body p-3">
      <div class="flex items-center justify-between">
        <span class="text-xs text-placecal-orange/80">Events this week</span>
        <svg class="size-4 text-placecal-orange/50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
      </div>
      <div class="text-2xl font-bold text-placecal-orange"><%= @total_events_this_week %></div>
    </div>
  </div>

  <%# Handbook link %>
  <%= link_to "https://handbook.placecal.org/", target: "_blank", class: "card bg-base-100 border border-base-300 shadow-sm hover:border-placecal-orange/30 transition-all group" do %>
    <div class="card-body p-3">
      <div class="flex items-center justify-between">
        <span class="text-xs text-base-content/60 group-hover:text-placecal-orange transition-colors">Need help?</span>
        <svg class="size-4 text-base-content/30 group-hover:text-placecal-orange/50 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
      </div>
      <div class="flex items-center gap-2 mt-1">
        <svg class="size-5 text-base-content/40 group-hover:text-placecal-orange transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
        <span class="text-sm font-medium text-base-content/60 group-hover:text-base-content transition-colors">Handbook</span>
      </div>
    </div>
  <% end %>
</div>

<%# Bento Grid Dashboard %>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

  <%# Sites Section - spans 1 col, 2-up grid inside %>
  <% if @sites.any? %>
    <div class="card bg-gradient-to-br from-placecal-orange/5 via-base-100 to-base-100 border border-base-300 shadow-sm overflow-hidden relative">
      <%# Decorative background element %>
      <div class="absolute -right-8 -top-8 w-32 h-32 bg-placecal-orange/10 rounded-full blur-2xl"></div>
      <div class="card-body p-4 relative">
        <div class="flex items-center justify-between mb-3">
          <h2 class="font-bold flex items-center gap-2">
            <svg class="size-5 text-placecal-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>
            Your Sites
          </h2>
          <%= link_to "View all", admin_sites_path, class: "text-sm text-placecal-orange hover:text-orange-600" %>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <% @sites.take(4).each do |site| %>
            <%= link_to edit_admin_site_path(site), class: "group block" do %>
              <div class="bg-base-100/80 backdrop-blur border border-placecal-orange/20 hover:border-placecal-orange/40 rounded-lg p-4 transition-all hover:shadow-md hover:bg-base-100">
                <h3 class="font-semibold text-base-content group-hover:text-placecal-orange transition-colors truncate"><%= site.name %></h3>
                <p class="text-xs text-base-content/50 mt-1"><%= site.slug %>.placecal.org</p>
                <p class="text-xs mt-2"><span class="font-semibold text-placecal-orange"><%= site.events_this_week %></span> <span class="text-base-content/50">events this week</span></p>
              </div>
            <% end %>
          <% end %>
        </div>
        <% if @sites.count > 4 %>
          <%= link_to "View all #{@sites.count} sites", admin_sites_path, class: "text-xs text-placecal-orange hover:text-orange-600 mt-2 block text-center" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Action Items Card %>
  <div class="card <%= @problem_calendars_count > 0 ? 'bg-error/5 border-error/20' : 'bg-success/5 border-success/20' %> border shadow-sm">
    <div class="card-body p-4">
      <h2 class="font-bold flex items-center gap-2 mb-3">
        <svg class="size-5 <%= @problem_calendars_count > 0 ? 'text-error' : 'text-success' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/></svg>
        Action Items
      </h2>
      <% if @errored_calendars.any? || @bad_source_calendars.any? %>
        <div class="space-y-1 max-h-72 overflow-y-auto">
          <% @errored_calendars.take(5).each do |calendar| %>
            <%= link_to edit_admin_calendar_path(calendar), class: "flex items-center gap-2 p-2 rounded-lg bg-error/10 hover:bg-error/20 transition-colors group" do %>
              <svg class="size-4 text-error flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
              <span class="text-sm truncate flex-1"><%= calendar.name %></span>
              <span class="text-xs text-error">Error</span>
            <% end %>
          <% end %>
          <% @bad_source_calendars.take(5).each do |calendar| %>
            <%= link_to edit_admin_calendar_path(calendar), class: "flex items-center gap-2 p-2 rounded-lg bg-warning/10 hover:bg-warning/20 transition-colors group" do %>
              <svg class="size-4 text-warning flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
              <span class="text-sm truncate flex-1"><%= calendar.name %></span>
              <span class="text-xs text-warning">Bad URL</span>
            <% end %>
          <% end %>
          <% if (@errored_calendars.count + @bad_source_calendars.count) > 10 %>
            <%= link_to admin_calendars_path(filter: 'problems'), class: "text-xs text-base-content/60 hover:text-placecal-orange mt-2 block" do %>
              View all <%= @errored_calendars.count + @bad_source_calendars.count %> issues →
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="flex items-center gap-3 text-success">
          <svg class="size-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
          <div>
            <p class="font-medium">All calendars healthy</p>
            <p class="text-xs text-base-content/50">No issues to fix</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%# Upcoming Events %>
  <div class="card bg-base-100 border border-base-300 shadow-sm">
    <div class="card-body p-4">
      <div class="flex items-center justify-between mb-3">
        <h2 class="font-bold flex items-center gap-2">
          <svg class="size-5 text-placecal-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          Upcoming Events
        </h2>
      </div>
      <% if @upcoming_events.any? %>
        <div class="space-y-1 max-h-64 overflow-y-auto">
          <% @upcoming_events.take(6).each do |event| %>
            <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-base-200/50 transition-colors">
              <div class="flex-shrink-0 w-10 text-center">
                <div class="text-[10px] font-medium text-placecal-orange uppercase"><%= event.dtstart.strftime('%b') %></div>
                <div class="text-lg font-bold text-base-content leading-tight"><%= event.dtstart.strftime('%d') %></div>
              </div>
              <div class="flex-1 min-w-0">
                <h4 class="text-sm font-medium text-base-content truncate"><%= event.summary %></h4>
                <p class="text-xs text-base-content/50 truncate">
                  <%= event.dtstart.strftime('%H:%M') %>
                  <% if event.partner %>· <%= event.partner.name %><% end %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center py-6 text-base-content/40">
          <svg class="size-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          <p class="text-sm">No upcoming events</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Recently Updated Partners %>
  <div class="card bg-base-100 border border-base-300 shadow-sm">
    <div class="card-body p-4">
      <div class="flex items-center justify-between mb-3">
        <h2 class="font-bold flex items-center gap-2">
          <svg class="size-5 text-placecal-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          Recently Updated
        </h2>
        <%= link_to "All", admin_partners_path, class: "text-sm text-placecal-orange hover:text-orange-600" %>
      </div>
      <% if @partners.any? %>
        <div class="space-y-1 max-h-64 overflow-y-auto">
          <% @partners.take(6).each do |partner| %>
            <%= link_to edit_admin_partner_path(partner), class: "flex items-center gap-3 p-2 rounded-lg hover:bg-base-200/50 transition-colors group" do %>
              <% if partner.image.url %>
                <%= image_tag partner.image.url, class: "w-9 h-9 rounded-lg object-cover flex-shrink-0" %>
              <% else %>
                <div class="w-9 h-9 rounded-lg bg-base-300 flex items-center justify-center flex-shrink-0">
                  <svg class="size-4 text-base-content/30" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <h4 class="text-sm font-medium text-base-content group-hover:text-placecal-orange transition-colors truncate"><%= partner.name %></h4>
                <p class="text-xs text-base-content/50"><%= time_ago_in_words(partner.updated_at) %> ago</p>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center py-6 text-base-content/40">
          <svg class="size-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          <p class="text-sm">No partners yet</p>
          <%= link_to "Add your first", new_admin_partner_path, class: "text-xs text-placecal-orange hover:text-orange-600 mt-1" %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Your Partnerships %>
  <% if @user_partnerships.any? %>
    <div class="card bg-gradient-to-br from-purple-500/5 via-base-100 to-base-100 border border-base-300 shadow-sm overflow-hidden relative">
      <div class="absolute -left-8 -bottom-8 w-32 h-32 bg-purple-500/10 rounded-full blur-2xl"></div>
      <div class="card-body p-4 relative">
        <div class="flex items-center justify-between mb-3">
          <h2 class="font-bold flex items-center gap-2">
            <svg class="size-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
            Your Partnerships
          </h2>
        </div>
        <div class="space-y-2 max-h-64 overflow-y-auto">
          <% @user_partnerships.take(6).each do |partnership| %>
            <%= link_to edit_admin_tag_path(partnership), class: "flex items-center justify-between gap-3 p-3 rounded-lg bg-base-100/80 border border-purple-500/10 hover:border-purple-500/30 transition-all hover:shadow-sm group" do %>
              <div class="flex-1 min-w-0">
                <h4 class="text-sm font-medium text-base-content group-hover:text-purple-600 transition-colors truncate"><%= partnership.name %></h4>
                <p class="text-xs text-base-content/50 mt-0.5"><%= pluralize(partnership.partners.count, 'partner') %></p>
              </div>
              <svg class="size-4 text-base-content/30 group-hover:text-purple-500 transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            <% end %>
          <% end %>
        </div>
        <% if @user_partnerships.count > 6 %>
          <%= link_to "View all #{@user_partnerships.count} partnerships", admin_tags_path(type: 'Partnership'), class: "text-xs text-purple-500 hover:text-purple-600 mt-3 block text-center" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Quick Links %>
  <div class="card bg-base-100 border border-base-300 shadow-sm">
    <div class="card-body p-4">
      <h2 class="font-bold flex items-center gap-2 mb-3">
        <svg class="size-5 text-placecal-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
        Quick Links
      </h2>
      <div class="space-y-1">
        <%= link_to admin_calendars_path, class: "flex items-center gap-3 p-2 rounded-lg hover:bg-base-200/50 transition-colors group" do %>
          <svg class="size-5 text-base-content/40 group-hover:text-placecal-orange transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          <span class="text-sm text-base-content/70 group-hover:text-base-content transition-colors">All Calendars</span>
        <% end %>
        <%= link_to admin_partners_path, class: "flex items-center gap-3 p-2 rounded-lg hover:bg-base-200/50 transition-colors group" do %>
          <svg class="size-5 text-base-content/40 group-hover:text-placecal-orange transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          <span class="text-sm text-base-content/70 group-hover:text-base-content transition-colors">All Partners</span>
        <% end %>
        <%= link_to "https://handbook.placecal.org/", target: "_blank", class: "flex items-center gap-3 p-2 rounded-lg hover:bg-base-200/50 transition-colors group" do %>
          <svg class="size-5 text-base-content/40 group-hover:text-placecal-orange transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
          <span class="text-sm text-base-content/70 group-hover:text-base-content transition-colors">Handbook</span>
