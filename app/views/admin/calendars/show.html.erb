<div class="mb-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold"><%= @calendar.name %></h1>
      <p class="text-sm text-base-content/60 mt-1">
        Calendar for <%= link_to @calendar.partner.name, edit_admin_partner_path(@calendar.partner), class: "link link-hover text-placecal-orange" %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to edit_admin_calendar_path(@calendar.id), class: "btn bg-placecal-orange hover:bg-orange-600 text-white border-placecal-orange" do %>
        <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
        Edit Calendar
      <% end %>
    </div>
  </div>
</div>

<%# Import Status Bar %>
<%= render 'importer_overview', calendar: @calendar %>

<div class="divider my-6"></div>

<%# Info Cards %>
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
  <div class="card bg-base-200/50 border border-base-300">
    <div class="card-body p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-placecal-orange/10 flex items-center justify-center shrink-0">
          <svg class="size-5 text-placecal-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
        </div>
        <div>
          <p class="text-xs text-base-content/60 uppercase font-medium">Partner</p>
          <%= link_to @calendar.partner.name, edit_admin_partner_path(@calendar.partner), class: "font-semibold link link-hover text-placecal-orange" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card bg-base-200/50 border border-base-300">
    <div class="card-body p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-info/10 flex items-center justify-center shrink-0">
          <svg class="size-5 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        </div>
        <div>
          <p class="text-xs text-base-content/60 uppercase font-medium">Strategy</p>
          <p class="font-semibold"><%= @calendar.strategy.to_s.titleize %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="card bg-base-200/50 border border-base-300">
    <div class="card-body p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-success/10 flex items-center justify-center shrink-0">
          <svg class="size-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        </div>
        <div>
          <p class="text-xs text-base-content/60 uppercase font-medium">Default Location</p>
          <% if @calendar.place %>
            <%= link_to @calendar.place.name, edit_admin_partner_path(@calendar.place), class: "font-semibold link link-hover text-placecal-orange" %>
          <% else %>
            <p class="text-base-content/50 italic">Not set</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Events Section %>
<div class="card bg-base-100 border border-base-300">
  <div class="card-body p-0">
    <div class="p-4 border-b border-base-300 flex items-center justify-between">
      <h2 class="font-bold flex items-center gap-2">
        <svg class="size-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        Events
        <span class="badge badge-neutral"><%= @calendar.events.count %></span>
      </h2>
    </div>

    <% upcoming_events = @calendar.events.upcoming %>
    <% past_events = @calendar.events.past.limit(50) %>

    <div role="tablist" class="tabs tabs-bordered px-4 pt-2">
      <input type="radio" name="events_tabs" role="tab" class="tab" aria-label="Upcoming (<%= upcoming_events.count %>)" checked="checked" />
      <div role="tabpanel" class="tab-content py-4">
        <% if upcoming_events.any? %>
          <div class="overflow-x-auto">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th class="w-24">Date</th>
                  <th>Event</th>
                  <th>Location</th>
                </tr>
              </thead>
              <tbody>
                <% upcoming_events.each do |event| %>
                  <tr class="hover">
                    <td class="whitespace-nowrap">
                      <div class="font-semibold text-sm"><%= event.dtstart.strftime('%d %b') %></div>
                      <div class="text-xs text-base-content/60"><%= event.dtstart.strftime('%H:%M') %></div>
                    </td>
                    <td>
                      <div class="font-medium"><%= truncate(event.summary, length: 70) %></div>
                    </td>
                    <td class="text-sm text-base-content/70">
                      <% if event.address %>
                        <%= truncate(event.address.to_s, length: 50) %>
                      <% elsif event.partner %>
                        <%= event.partner.name %>
                      <% else %>
                        <span class="text-base-content/40">—</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-base-content/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="mt-3 text-base-content/60">No upcoming events</p>
          </div>
        <% end %>
      </div>

      <input type="radio" name="events_tabs" role="tab" class="tab" aria-label="Past (<%= past_events.count %>)" />
      <div role="tabpanel" class="tab-content py-4">
        <% if past_events.any? %>
          <div class="overflow-x-auto">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th class="w-24">Date</th>
                  <th>Event</th>
                  <th>Location</th>
                </tr>
              </thead>
              <tbody>
                <% past_events.each do |event| %>
                  <tr class="hover opacity-70">
                    <td class="whitespace-nowrap">
                      <div class="font-semibold text-sm"><%= event.dtstart.strftime('%d %b') %></div>
                      <div class="text-xs text-base-content/60"><%= event.dtstart.strftime('%Y') %></div>
                    </td>
                    <td>
                      <div class="font-medium"><%= truncate(event.summary, length: 70) %></div>
                    </td>
                    <td class="text-sm text-base-content/70">
                      <% if event.address %>
                        <%= truncate(event.address.to_s, length: 50) %>
                      <% elsif event.partner %>
                        <%= event.partner.name %>
                      <% else %>
                        <span class="text-base-content/40">—</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% if @calendar.events.past.count > 50 %>
            <p class="text-center text-sm text-base-content/50 mt-4">Showing 50 of <%= @calendar.events.past.count %> past events</p>
          <% end %>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-base-content/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="mt-3 text-base-content/60">No past events</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
