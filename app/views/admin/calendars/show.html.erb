<div class="mb-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold"><%= @calendar.name %></h1>
      <p class="text-sm text-base-content/60 mt-1">
        Calendar for <%= link_to @calendar.partner.name, edit_admin_partner_path(@calendar.partner), class: "link link-hover text-placecal-orange" %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to edit_admin_calendar_path(@calendar.id), class: "btn bg-placecal-orange hover:bg-orange-600 text-white border-placecal-orange" do %>
        <%= icon(:edit, size: '4') %>
        Edit Calendar
      <% end %>
    </div>
  </div>
</div>

<%# Import Status Bar %>
<%= render 'importer_overview', calendar: @calendar %>

<div class="divider my-6"></div>

<%# Info Cards %>
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
  <div class="card bg-base-200/50 border border-base-300">
    <div class="card-body p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-placecal-orange/10 flex items-center justify-center shrink-0">
          <%= icon(:partner, size: '5', css_class: 'text-placecal-orange') %>
        </div>
        <div>
          <p class="text-xs text-base-content/60 uppercase font-medium">Partner</p>
          <%= link_to @calendar.partner.name, edit_admin_partner_path(@calendar.partner), class: "font-semibold link link-hover text-placecal-orange" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card bg-base-200/50 border border-base-300">
    <div class="card-body p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-info/10 flex items-center justify-center shrink-0">
          <%= icon(:cog, size: '5', css_class: 'text-info') %>
        </div>
        <div>
          <p class="text-xs text-base-content/60 uppercase font-medium">Strategy</p>
          <p class="font-semibold"><%= @calendar.strategy.to_s.titleize %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="card bg-base-200/50 border border-base-300">
    <div class="card-body p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-success/10 flex items-center justify-center shrink-0">
          <%= icon(:map_pin, size: '5', css_class: 'text-success') %>
        </div>
        <div>
          <p class="text-xs text-base-content/60 uppercase font-medium">Default Location</p>
          <% if @calendar.place %>
            <%= link_to @calendar.place.name, edit_admin_partner_path(@calendar.place), class: "font-semibold link link-hover text-placecal-orange" %>
          <% else %>
            <p class="text-base-content/50 italic">Not set</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Events Section %>
<div class="card bg-base-100 border border-base-300">
  <div class="card-body p-0">
    <div class="p-4 border-b border-base-300 flex items-center justify-between">
      <h2 class="font-bold flex items-center gap-2">
        <%= icon(:calendar, size: '5') %>
        Events
        <span class="badge badge-neutral"><%= @calendar.events.count %></span>
      </h2>
    </div>

    <% upcoming_events = @calendar.events.upcoming %>
    <% past_events = @calendar.events.past.limit(50) %>

    <div role="tablist" class="tabs tabs-bordered px-4 pt-2">
      <input type="radio" name="events_tabs" role="tab" class="tab" aria-label="Upcoming (<%= upcoming_events.count %>)" checked="checked" />
      <div role="tabpanel" class="tab-content py-4">
        <% if upcoming_events.any? %>
          <div class="overflow-x-auto">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th class="w-24">Date</th>
                  <th>Event</th>
                  <th>Location</th>
                </tr>
              </thead>
              <tbody>
                <% upcoming_events.each do |event| %>
                  <tr class="hover">
                    <td class="whitespace-nowrap">
                      <div class="font-semibold text-sm"><%= event.dtstart.strftime('%d %b') %></div>
                      <div class="text-xs text-base-content/60"><%= event.dtstart.strftime('%H:%M') %></div>
                    </td>
                    <td>
                      <div class="font-medium"><%= truncate(event.summary, length: 70) %></div>
                    </td>
                    <td class="text-sm text-base-content/70">
                      <% if event.address %>
                        <%= truncate(event.address.to_s, length: 50) %>
                      <% elsif event.partner %>
                        <%= event.partner.name %>
                      <% else %>
                        <span class="text-base-content/40">—</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <%= icon(:calendar, size: '12', css_class: 'mx-auto text-base-content/20', stroke_width: '1.5') %>
            <p class="mt-3 text-base-content/60">No upcoming events</p>
          </div>
        <% end %>
      </div>

      <input type="radio" name="events_tabs" role="tab" class="tab" aria-label="Past (<%= past_events.count %>)" />
      <div role="tabpanel" class="tab-content py-4">
        <% if past_events.any? %>
          <div class="overflow-x-auto">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th class="w-24">Date</th>
                  <th>Event</th>
                  <th>Location</th>
                </tr>
              </thead>
              <tbody>
                <% past_events.each do |event| %>
                  <tr class="hover opacity-70">
                    <td class="whitespace-nowrap">
                      <div class="font-semibold text-sm"><%= event.dtstart.strftime('%d %b') %></div>
                      <div class="text-xs text-base-content/60"><%= event.dtstart.strftime('%Y') %></div>
                    </td>
                    <td>
                      <div class="font-medium"><%= truncate(event.summary, length: 70) %></div>
                    </td>
                    <td class="text-sm text-base-content/70">
                      <% if event.address %>
                        <%= truncate(event.address.to_s, length: 50) %>
                      <% elsif event.partner %>
                        <%= event.partner.name %>
                      <% else %>
                        <span class="text-base-content/40">—</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% if @calendar.events.past.count > 50 %>
            <p class="text-center text-sm text-base-content/50 mt-4">Showing 50 of <%= @calendar.events.past.count %> past events</p>
          <% end %>
        <% else %>
          <div class="text-center py-12">
            <%= icon(:calendar, size: '12', css_class: 'mx-auto text-base-content/20', stroke_width: '1.5') %>
            <p class="mt-3 text-base-content/60">No past events</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
