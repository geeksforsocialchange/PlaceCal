<%= simple_form_for [:admin, @neighbourhood], html: { data: { controller: 'form-dirty' } } do |f| %>
  <%= render(Admin::ErrorComponent.new(@neighbourhood)) %>

  <%# Two-column layout: Name (2/3) + ONS Info (1/3) %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <%# Neighbourhood Name - 2/3 width %>
    <div class="lg:col-span-2">
      <%= render Admin::CardComponent.new(
            title: t('admin.neighbourhoods.form.name_title'),
            icon: :edit
          ) do %>
        <p class="text-sm text-base-content/60 mb-4"><%= t('admin.neighbourhoods.form.name_description') %></p>
        <div class="space-y-4">
          <fieldset class="fieldset">
            <legend class="fieldset-legend"><%= attr_label(:neighbourhood, :name) %></legend>
            <%= f.input_field :name, class: 'input input-bordered w-full' %>
          </fieldset>

          <fieldset class="fieldset">
            <legend class="fieldset-legend"><%= attr_label(:neighbourhood, :name_abbr) %></legend>
            <%= f.input_field :name_abbr, class: 'input input-bordered w-full' %>
            <p class="fieldset-label mt-1"><%= t('admin.neighbourhoods.form.name_abbr_hint') %></p>
          </fieldset>
        </div>
      <% end %>
    </div>

    <%# Official ONS Data - 1/3 width %>
    <div class="lg:col-span-1">
      <% is_current = !@neighbourhood.legacy_neighbourhood? %>
      <%= render Admin::CardComponent.new(
            title: t('admin.neighbourhoods.form.official_title'),
            icon: :globe
          ) do %>
        <p class="text-sm text-base-content/60 mb-4"><%= t('admin.neighbourhoods.form.official_description') %></p>
        <div class="space-y-3">
          <%# Level %>
          <div class="flex items-center justify-between py-2 border-b border-base-200">
            <span class="text-sm text-base-content/60"><%= t('admin.neighbourhoods.show.stats.level') %></span>
            <div class="flex items-center gap-2">
              <%= level_badge(@neighbourhood.level, size: :small) %>
              <span class="font-medium"><%= @neighbourhood.unit&.titleize || '—' %></span>
            </div>
          </div>

          <%# Unit Name %>
          <div class="flex items-center justify-between py-2 border-b border-base-200">
            <span class="text-sm text-base-content/60"><%= attr_label(:neighbourhood, :unit_name) %></span>
            <span class="font-medium truncate ml-2"><%= @neighbourhood.unit_name || '—' %></span>
          </div>

          <%# ONS Code %>
          <div class="flex items-center justify-between py-2 border-b border-base-200">
            <span class="text-sm text-base-content/60"><%= t('admin.neighbourhoods.show.stats.ons_code') %></span>
            <span class="font-mono font-medium"><%= @neighbourhood.unit_code_value || '—' %></span>
          </div>

          <%# ONS Dataset %>
          <div class="flex items-center justify-between py-2">
            <span class="text-sm text-base-content/60"><%= t('admin.neighbourhoods.show.stats.ons_dataset') %></span>
            <div class="flex items-center gap-2">
              <span class="font-medium"><%= @neighbourhood.release_date&.strftime('%b %Y') || '—' %></span>
              <% if is_current %>
                <span class="badge badge-xs badge-success"><%= t('admin.neighbourhoods.show.stats.current') %></span>
              <% else %>
                <span class="badge badge-xs badge-warning"><%= t('admin.neighbourhoods.show.stats.legacy') %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%# Section 3: Neighbourhood Admins (root users only) %>
  <% if policy(@neighbourhood).set_users? %>
    <%= render Admin::SectionHeaderComponent.new(
      title: t('admin.neighbourhoods.form.admins_title'),
      description: t('admin.neighbourhoods.form.admins_description')
    ) %>

    <div class="mb-8">
      <fieldset class="fieldset">
        <legend class="fieldset-legend"><%= User.model_name.human(count: 2) %></legend>
        <%= f.association :users,
            label: false,
            collection: options_for_users,
            input_html: {
              class: "w-full",
              data: { controller: "tom-select" }
            } %>
      </fieldset>
    </div>
  <% end %>

  <%# Save Bar %>
  <%= render Admin::SaveBarComponent.new(track_changes: true) do |save_bar| %>
    <% save_bar.with_button do %>
      <%= f.submit t('admin.actions.save'), class: "btn bg-placecal-orange hover:bg-orange-600 text-white border-placecal-orange" %>
    <% end %>
  <% end %>
<% end %>
