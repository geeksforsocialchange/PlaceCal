<%= simple_form_for [:admin, @neighbourhood], html: { data: { controller: 'form-dirty' } } do |f| %>
  <%= render(Admin::ErrorComponent.new(@neighbourhood)) %>

  <%# Two-column layout: Name (2/3) + ONS Info (1/3) %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <%# Neighbourhood Name - 2/3 width %>
    <div class="lg:col-span-2">
      <%= render Admin::CardComponent.new(
            title: t('admin.neighbourhoods.form.name_title'),
            icon: :edit
          ) do %>
        <p class="text-sm text-base-content/60 mb-4"><%= t('admin.neighbourhoods.form.name_description') %></p>
        <div class="space-y-4">
          <fieldset class="fieldset">
            <legend class="fieldset-legend"><%= attr_label(:neighbourhood, :name) %></legend>
            <%= f.input_field :name, class: 'input input-bordered w-full' %>
          </fieldset>

          <fieldset class="fieldset">
            <legend class="fieldset-legend"><%= attr_label(:neighbourhood, :name_abbr) %></legend>
            <%= f.input_field :name_abbr, class: 'input input-bordered w-full' %>
            <p class="fieldset-label mt-1"><%= t('admin.neighbourhoods.form.name_abbr_hint') %></p>
          </fieldset>
        </div>
      <% end %>
    </div>

    <%# Official ONS Data - 1/3 width %>
    <div class="lg:col-span-1">
      <% is_current = !@neighbourhood.legacy_neighbourhood? %>
      <%= render Admin::CardComponent.new(
            title: t('admin.neighbourhoods.form.official_title'),
            icon: :globe
          ) do %>
        <p class="text-sm text-base-content/60 mb-4"><%= t('admin.neighbourhoods.form.official_description') %></p>
        <div class="space-y-3">
          <%# Level %>
          <div class="flex items-center justify-between py-2 border-b border-base-200">
            <span class="text-sm text-base-content/60"><%= t('admin.neighbourhoods.show.stats.level') %></span>
            <div class="flex items-center gap-2">
              <%= level_badge(@neighbourhood.level, size: :small) %>
              <span class="font-medium"><%= @neighbourhood.unit&.titleize || '—' %></span>
            </div>
          </div>

          <%# Unit Name %>
          <div class="flex items-center justify-between py-2 border-b border-base-200">
            <span class="text-sm text-base-content/60"><%= attr_label(:neighbourhood, :unit_name) %></span>
            <span class="font-medium truncate ml-2"><%= @neighbourhood.unit_name || '—' %></span>
          </div>

          <%# ONS Code %>
          <div class="flex items-center justify-between py-2 border-b border-base-200">
            <span class="text-sm text-base-content/60"><%= t('admin.neighbourhoods.show.stats.ons_code') %></span>
            <span class="font-mono font-medium"><%= @neighbourhood.unit_code_value || '—' %></span>
          </div>

          <%# ONS Dataset %>
          <div class="flex items-center justify-between py-2">
            <span class="text-sm text-base-content/60"><%= t('admin.neighbourhoods.show.stats.ons_dataset') %></span>
            <div class="flex items-center gap-2">
              <span class="font-medium"><%= @neighbourhood.release_date&.strftime('%b %Y') || '—' %></span>
              <% if is_current %>
                <span class="badge badge-xs badge-success"><%= t('admin.neighbourhoods.show.stats.current') %></span>
              <% else %>
                <span class="badge badge-xs badge-warning"><%= t('admin.neighbourhoods.show.stats.legacy') %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%# Section 3: Geography (for existing records only) %>
  <% unless @neighbourhood.new_record? %>
    <%= render Admin::SectionHeaderComponent.new(
      title: t('admin.neighbourhoods.form.geography_title')
    ) %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <%# Parents Card %>
      <%= render Admin::CardComponent.new(
            title: t('admin.neighbourhoods.form.is_part_of'),
            icon: :arrow_up
          ) do %>
        <% ancestors = @neighbourhood.ancestors.order(:ancestry) %>
        <% if ancestors.any? %>
          <div class="space-y-1">
            <% ancestors.reverse.each do |ancestor| %>
              <%= link_to edit_admin_neighbourhood_path(ancestor),
                  class: "flex items-center gap-3 p-2 rounded-lg hover:bg-base-200/50 transition-colors group" do %>
                <%= level_badge(ancestor.level) %>
                <div class="flex-1 min-w-0">
                  <span class="text-sm font-medium text-base-content group-hover:text-placecal-orange transition-colors truncate block">
                    <%= safe_neighbourhood_name(ancestor) %>
                  </span>
                  <span class="text-xs text-base-content/50"><%= ancestor.unit&.titleize %></span>
                </div>
                <%= icon(:chevron_right, size: '4', css_class: 'text-base-content/30 group-hover:text-placecal-orange transition-colors') %>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="flex items-center gap-3 py-4 text-base-content/40">
            <%= icon(:globe, size: '6', stroke_width: '1.5') %>
            <span class="text-sm"><%= t('admin.neighbourhoods.show.is_root') %></span>
          </div>
        <% end %>
      <% end %>

      <%# Children Card %>
      <%= render Admin::CardComponent.new(
            title: t('admin.neighbourhoods.form.contains'),
            icon: :arrow_down
          ) do %>
        <% children = @neighbourhood.children.order(:name) %>
        <% if children.any? %>
          <div class="space-y-1 max-h-64 overflow-y-auto">
            <% children.each do |child| %>
              <%= link_to edit_admin_neighbourhood_path(child),
                  class: "flex items-center gap-3 p-2 rounded-lg hover:bg-base-200/50 transition-colors group" do %>
                <%= level_badge(child.level) %>
                <div class="flex-1 min-w-0">
                  <span class="text-sm font-medium text-base-content group-hover:text-placecal-orange transition-colors truncate block">
                    <%= safe_neighbourhood_name(child) %>
                  </span>
                  <span class="text-xs text-base-content/50"><%= child.unit&.titleize %></span>
                </div>
                <% if child.descendants.any? %>
                  <span class="badge badge-sm badge-ghost"><%= child.descendants.count %></span>
                <% end %>
                <%= icon(:chevron_right, size: '4', css_class: 'text-base-content/30 group-hover:text-placecal-orange transition-colors') %>
              <% end %>
            <% end %>
          </div>
          <% if children.count > 10 %>
            <p class="text-xs text-base-content/50 mt-3 text-center">
              <%= t('admin.neighbourhoods.show.descendants', count: children.count) %>
            </p>
          <% end %>
        <% else %>
          <%= render Admin::EmptyStateComponent.new(
                icon: :neighbourhood,
                message: t('admin.neighbourhoods.show.no_children'),
                icon_size: '8',
                padding: 'py-6'
              ) %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%# Section 4: Neighbourhood Admins (root users only) %>
  <% if policy(@neighbourhood).set_users? %>
    <%= render Admin::SectionHeaderComponent.new(
      title: t('admin.neighbourhoods.form.admins_title'),
      description: t('admin.neighbourhoods.form.admins_description')
    ) %>

    <div class="mb-8">
      <fieldset class="fieldset">
        <legend class="fieldset-legend"><%= User.model_name.human(count: 2) %></legend>
        <%= f.association :users,
            label: false,
            collection: options_for_users,
            input_html: {
              class: "w-full",
              data: { controller: "tom-select" }
            } %>
      </fieldset>
    </div>
  <% end %>

  <%# Save Bar %>
  <%= render Admin::SaveBarComponent.new(track_changes: true) do |save_bar| %>
    <% save_bar.with_button do %>
      <%= f.submit t('admin.actions.save'), class: "btn bg-placecal-orange hover:bg-orange-600 text-white border-placecal-orange" %>
    <% end %>
    <% if !@neighbourhood.new_record? && policy(@neighbourhood).destroy? %>
      <% save_bar.with_button do %>
        <%= link_to t('admin.actions.delete'),
            admin_neighbourhood_path(@neighbourhood),
            method: :delete,
            data: { confirm: t('admin.confirm.delete_permanent', model: 'neighbourhood') },
            class: "btn btn-outline btn-error" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
