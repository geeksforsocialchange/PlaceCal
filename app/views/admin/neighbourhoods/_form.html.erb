<%= simple_form_for [:admin, @neighbourhood] do |f| %>

  <%= render(Admin::ErrorComponent.new(@neighbourhood)) %>
  <h2><%= t('admin.neighbourhoods.form.name_title') %></h2>
  <p><%= t('admin.neighbourhoods.form.name_description') %></p>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :name %>
    </div>
    <div class="col-md-6">
      <%= f.input :name_abbr %>
    </div>
  </div>

  <h2><%= t('admin.neighbourhoods.form.official_title') %></h2>
  <p><%= t('admin.neighbourhoods.form.official_description') %></p>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :unit, readonly: true  %>
      <%= f.input :unit_name, readonly: true  %>

    </div>
    <div class="col-md-6">
      <%= f.input :unit_code_key, readonly: true  %>
      <%= f.input :unit_code_value, readonly: true  %>
      <%= f.input :release_date, readonly: true  %>
    </div>
  </div>

  <% unless @neighbourhood.new_record? %>
    <h2><%= t('admin.neighbourhoods.form.geography_title') %></h2>
    <div class="row">
      <div class="col-md-6">
        <h3><%= t('admin.neighbourhoods.form.is_part_of') %></h3>
        <ul>
          <% @neighbourhood.ancestors.each do |parent| %>
            <li><%= link_to(parent, edit_admin_neighbourhood_path(parent)) if parent.to_s.length > 0 %></li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-6">
        <h3><%= t('admin.neighbourhoods.form.contains') %></h3>
        <ul>
          <% @neighbourhood.children.each do |parent| %>
            <li><%= link_to(parent, edit_admin_neighbourhood_path(parent)) if parent.to_s.length > 0 %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if policy(@neighbourhood).set_users? %>
    <h2><%= t('admin.neighbourhoods.form.admins_title') %></h2>
    <p><%= t('admin.neighbourhoods.form.admins_description') %></p>

    <%= f.association :users, label: User.model_name.human(count: 2), collection: options_for_users, input_html: { class: "form-control", data: { controller: "tom-select"}} %>
  <% end %>

  <%= f.submit t('admin.actions.save'), class: "btn btn-primary" %>
  <% if !@neighbourhood.new_record? && policy(@neighbourhood).destroy? %>
    <%= link_to t('admin.actions.destroy'), admin_neighbourhood_path(@neighbourhood), method: :delete, class: "ml-3 btn btn-danger" %>
  <% end %>
  <br><br>
<% end %>
