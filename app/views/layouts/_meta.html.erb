<link rel="icon" type="image/png" href="<%= image_url('favicon.png') %>">
<link rel="apple-touch-icon" href="<%= image_url('apple-touch-icon.png') %>">
<meta name="viewport" content="width=device-width, initial-scale=1">

<% if content_for?(:title) %>
  <title><%= yield(:title) %> | <%= @site&.name %></title>
  <meta property="og:title" content="<%= yield(:title) %> | <%= @site&.name %>" />
  <meta name="twitter:title" content="<%= yield(:title) %> | <%= @site&.name %>" />
<% else %>
  <title><%= @site&.name %> | The Community Calendar %></title>
  <meta property="og:title" content="<%= @site&.name %> - The Community Calendar" />
  <meta name="twitter:title" content="<%= @site&.name %> - The Community Calendar" />
<% end %>

<% if content_for?(:description) %>
  <meta property="og:description" content="<%= yield(:description) %>" />
  <meta name="twitter:description" content="<%= yield(:description) %>" />
<% else %>
  <meta property="og:description" content="<%= @site&.name %> is a community events calendar where you can find out everything that's happening near you, all in one place." />
  <meta name="twitter:description" content="<%= @site&.name %> is a community events calendar where you can find out everything that's happening near you, all in one place." />
<% end %>

<% if content_for?(:image) %>
  <meta property="og:image" content="<%= yield(:image) %>" />
  <meta property="og:image:alt" content="<%= yield(:image_alt) %>" />
  <meta name="twitter:image" content="<%= yield(:image) %>" />
  <meta name="twitter:image:alt" content="<%= yield(:image_alt) %>" />
<% else %>
  <meta property="og:image" content="<%= image_url('og/wide.png') %>" />
  <meta property="og:image:alt" content="PlaceCal logo" />
  <meta name="twitter:image" content="<%= image_url('og/wide.png') %>" />
  <meta name="twitter:image:alt" content="<%= image_url('og/wide.png') %>" />
  <meta property="og:image:width" content="1920" />
  <meta property="og:image:height" content="1080" />
<% end %>

<meta property="og:type" content="website" />
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@PlaceCal" />
<meta name="twitter:creator" content="@gfscstudio" />

<% if content_for?(:permalink) %>
  <meta property="og:url" content="<%= yield(:permalink) %>">
<% end %>
