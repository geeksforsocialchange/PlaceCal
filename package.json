{
	"name": "placecal",
	"version": "3.0.0",
	"private": true,
	"dependencies": {
		"@tailwindcss/cli": "^4.1.18",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"daisyui": "^5.5.14",
		"husky": "8.0.3",
		"lint-staged": "13.3.0",
		"prettier": "2.8.1"
	},
	"scripts": {
		"build": "yarn css-admin",
		"build:all": "yarn build",
		"css-admin": "./node_modules/.bin/tailwindcss -i ./app/tailwind/admin_tailwind.css -o ./public/assets/admin_tailwind.css --minify",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{css,html,js,json,md,scss,yml}": "prettier --write",
		"{*.{rb,jbuilder,rake,ru},.simplecov,Gemfile,Rakefile}": "bundle exec rubocop --force-exclusion --autocorrect"
	},
	"engines": {
		"node": "20.19.6"
	}
}
