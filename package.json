{
	"name": "placecal",
	"version": "2.0.0",
	"private": true,
	"dependencies": {
		"@hotwired/stimulus": "3.2.2",
		"@hotwired/turbo-rails": "7.3.0",
		"@rails/ujs": "6.1.710",
		"@tailwindcss/cli": "^4.1.18",
		"autoprefixer": "^10.4.23",
		"esbuild": "0.27.2",
		"esbuild-rails": "1.0.7",
		"jquery": "3.7.1",
		"leaflet": "1.9.4",
		"lodash": "4.17.21",
		"postcss": "^8.5.6",
		"sass": "1.97.1",
		"tailwindcss": "^4.1.18",
		"tom-select": "^2.4.3"
	},
	"devDependencies": {
		"husky": "8.0.3",
		"lint-staged": "13.3.0",
		"prettier": "2.8.1"
	},
	"scripts": {
		"build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
		"build:css": "sass ./app/assets/stylesheets/application.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
		"build:css:admin-tailwind": "./node_modules/.bin/tailwindcss -i ./app/tailwind/admin_tailwind.css -o ./public/assets/admin_tailwind.css --minify",
		"build:all": "yarn build && yarn build:css && yarn build:css:admin-tailwind",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{css,html,js,json,md,scss,yml}": "prettier --write",
		"{*.{rb,jbuilder,rake,ru},.simplecov,Gemfile,Rakefile}": "bundle exec rubocop --force-exclusion --autocorrect"
	},
	"engines": {
		"node": "20.19.6"
	}
}
